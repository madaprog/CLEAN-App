<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile"
    android:layout_margin="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:backgroundTint="@color/littlegray"
            android:background="@drawable/cover">
            <LinearLayout
                android:layout_margin="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_setting_app"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src=""/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/tree"
                android:translationZ="90dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                />

            <androidx.cardview.widget.CardView
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                app:cardElevation="1dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="20dp"
                        android:text="Mada Mnduwira"
                        android:textColor="@color/black"
                        android:fontFamily="@font/dmansbold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="12dp"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:text="I am Mada, Very passionate in renewable energy, \n \t\t\t\t\t let's go clean, Let's do clean!"
                        android:textColor="@color/littlegray"
                        android:fontFamily="@font/dmsansregular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="8dp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/textboarder"
                            android:baselineAligned="false"
                            android:fontFamily="@font/dmsansregular"
                            android:padding="4dp"
                            android:text="Edit Profile"
                            android:textColor="@color/black"
                            android:textSize="8sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/dmsansregular"
                                android:text="10"
                                android:textColor="@color/littlegray"
                                android:textSize="7sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dmsansregular"
                                android:text="Posts"
                                android:textColor="@color/littlegray"
                                android:textSize="8sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/dmsansregular"
                                android:text="9/10"
                                android:textColor="@color/littlegray"
                                android:textSize="7sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dmsansregular"
                                android:text="Badges"
                                android:textColor="@color/littlegray"
                                android:textSize="8sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>


</FrameLayout>